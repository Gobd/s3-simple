{
  "compilerOptions": {
    "removeComments": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "listFiles": false,
    "declaration": true,
    "strict": true,
    "inlineSourceMap": false,
    "moduleDetection": "force",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": false,
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["@types/node"],
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "exclude": [".vscode", "node_modules", "dist", "tests", "build"]
}
